<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="520.0dip"
	android:layout_height="580dip">
	<TextView android:text="请仔细阅读以下提示" android:layout_width="wrap_content"
		android:textSize="24.0dip" android:layout_gravity="center_horizontal" android:textColor="#FF0000"
		android:layout_height="wrap_content" android:padding="10.0dip"/>
