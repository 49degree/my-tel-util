<?xml version="1.0" encoding="utf-8"?>
<!-- 添加/修改 受益人 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="match_parent"
		android:paddingTop="53.0dip" android:layout_height="match_parent">
	
	<LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView android:text="提示" android:textColor="@color/black"
					android:textSize="18.0sp" android:layout_height="wrap_content"
					android:layout_width="300.0dip" android:gravity="right"/>
		<TextView android:text="*为必填项"  android:textColor="@color/black"
					android:textSize="18.0sp" android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:layout_marginLeft="11dip"/>			
	</LinearLayout>			
	<LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
		android:layout_height="fill_parent" android:layout_marginTop="24dip">
		<LinearLayout android:layout_height="wrap_content"
			android:gravity="right" android:layout_width="270.0dip"
			android:orientation="vertical">
			<TextView android:text="*姓名" android:textColor="@color/black"
				android:textSize="24.0sp" android:layout_height="wrap_content"
				android:layout_marginTop="2.0dip" android:layout_width="wrap_content" />
			<TextView android:text="*证件类型" android:layout_marginTop="26.0dip"
				android:textColor="@color/black" android:textSize="24.0sp"
				android:layout_height="wrap_content" android:layout_width="wrap_content" />
			<TextView android:text="*证件号码" android:layout_marginTop="27.0dip"
				android:textColor="@color/black" android:textSize="24.0sp"
				android:layout_height="wrap_content" android:layout_width="wrap_content" />
		</LinearLayout>
		<LinearLayout android:layout_height="wrap_content"
			android:layout_marginLeft="10.0dip" android:gravity="left"
			android:layout_width="250.0dip" android:orientation="vertical">
			<!-- 受益人姓名 -->
			<EditText style="@style/Common_EditText"
				android:layout_height="wrap_content" android:layout_width="fill_parent"
				android:maxLength="15" android:singleLine="true" android:id="@+id/benifitor" />
			<!-- 证件类型 -->
			<com.ihandy.xgx.ui.widget.SpinnerWidget android:id="@+id/idCardType"
				android:layout_height="wrap_content" android:prompt="@string/prompt_cardtype"
				android:layout_marginTop="20.0dip" android:layout_width="fill_parent" />
			<!-- 证件号码 -->
			<EditText style="@style/Common_EditText"
				android:layout_height="wrap_content" android:id="@+id/idCardNo" android:singleLine="true"
				android:digits="0123456789xX" android:maxLength="18"  android:inputType="number"
				android:layout_marginTop="20.0dip" android:layout_width="250dip" />
		</LinearLayout>
		<LinearLayout android:layout_height="wrap_content"
			android:gravity="right" android:layout_width="300.0dip"
			android:orientation="vertical">
			<TextView android:text="*性别" android:textColor="@color/black"
				android:textSize="24.0sp" android:layout_height="wrap_content"
				android:layout_marginTop="2.0dip" android:layout_width="wrap_content" />
	
			<TextView android:text="*与被保人关系" android:layout_marginTop="26.0dip"
				android:textColor="@color/black" android:textSize="24.0sp"
				android:layout_height="wrap_content" android:layout_width="wrap_content" />
	
			<TextView android:text="*受益比例" android:layout_marginTop="27.0dip"
				android:id="@+id/benifitRateTxt" android:textColor="@color/black"
				android:textSize="24.0sp" android:layout_height="wrap_content"
				android:layout_width="wrap_content" />
		</LinearLayout>
		<LinearLayout android:layout_height="wrap_content"
			android:layout_marginLeft="10.0dip" android:gravity="left"
			android:layout_width="220.0dip" android:orientation="vertical">
		    <!-- 性别 -->	
			<com.ihandy.xgx.ui.widget.SpinnerWidget android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:prompt="@string/prompt_gender"
				android:id="@+id/gender" />
			<!-- 与被保人关系 -->
			<com.ihandy.xgx.ui.widget.SpinnerWidget android:id="@+id/ddlRelation"
				android:prompt="@string/prompt_relationship"
				android:layout_marginTop="20.0dip" android:layout_width="fill_parent"
				android:layout_height="wrap_content" />
			<!-- 收益比例 -->
			<EditText style="@style/Common_EditText"
				android:layout_height="wrap_content" android:id="@+id/benifitRate"
				android:digits="0123456789" android:maxLength="3"  android:inputType="number"
				android:layout_marginTop="20.0dip" android:layout_width="fill_parent"
				android:numeric="integer" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>	
