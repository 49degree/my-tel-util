<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="100px"
    android:background="#005094" >

    <ImageView
        android:id="@+id/app_left_menu_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18px"
        android:background="@drawable/app_top_title_menu_normal"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/buttons_rl"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="150px"
            android:layout_height="70px"
            android:layout_centerVertical="true"
            android:background="@drawable/textview_layout_style"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/left_b"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:background="@drawable/textview_style_b"
                android:gravity="center"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="150px"
            android:layout_height="70px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="170px"
            android:background="@drawable/textview_layout_style"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/right_b"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:background="@drawable/textview_style"
                android:gravity="center"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/center_title"
        android:layout_width="150px"
        android:layout_height="70px"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:background="@drawable/textview_style"
        android:gravity="center"
        android:textColor="@color/white"
        android:visibility="gone" />

</RelativeLayout>