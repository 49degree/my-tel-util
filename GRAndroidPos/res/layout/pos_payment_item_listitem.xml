<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:orientation="horizontal"
	android:id="@+id/posPaymentItem" android:layout_height="wrap_content">
	<View android:layout_width="1.dip" android:layout_height="fill_parent"
		android:background="#cecdcd" />
	<!-- 险种名称 -->
	<TextView android:gravity="center" android:layout_height="50dip"
		android:layout_width="520.0dip" android:textColor="@color/lightblack"
		android:textSize="22px" android:id="@+id/policyPorductName" />
	<View android:layout_width="1.dip" android:layout_height="fill_parent"
		android:background="#cecdcd" />
	<!-- 份数/ -->
	<TextView android:gravity="center" android:layout_height="50dip"
		android:layout_width="200.0dip" android:textColor="@color/lightblack"
		android:textSize="22px" android:id="@+id/policyProductLevel" />

	<View android:layout_width="1.dip" android:layout_height="fill_parent"
		android:background="#cecdcd" />
	<!-- 交费方式 -->
	<TextView android:gravity="center" android:layout_height="50dip"
		android:layout_width="120.0dip" android:textColor="@color/lightblack"
		android:textSize="22px" android:id="@+id/policyProductPayMode" />

	<View android:layout_width="1.dip" android:layout_height="fill_parent"
		android:background="#cecdcd" />
	<!-- 交费年限 -->
	<TextView android:gravity="center" android:layout_height="50dip"
		android:singleLine="true" android:layout_width="120.0dip"  android:id="@+id/policyProductPayYears" 
		android:textColor="@color/lightblack" android:textSize="22px" />

	<View android:layout_width="1.dip" android:layout_height="fill_parent"
		android:background="#cecdcd" />
	<!-- 保险期间 -->
	<TextView android:gravity="center" android:layout_height="50dip"
		android:singleLine="true" android:layout_width="120.0dip"
		android:textColor="@color/lightblack" android:textSize="22px"
		 android:id="@+id/policyProductPaymeCoveragePeriods" />

	<View android:layout_width="1.dip" android:layout_height="fill_parent"
		android:background="#cecdcd" />
	<!-- 保险费-->
	<TextView android:gravity="center" android:layout_height="50dip"
		android:singleLine="true" android:layout_width="140.0dip"
		android:textColor="@color/lightblack" android:textSize="22px"
		 android:id="@+id/policyProductPremium" />

	<View android:layout_width="1.dip" android:layout_height="fill_parent"
		android:background="#cecdcd" />

</LinearLayout>