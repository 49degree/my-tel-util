<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:orientation="horizontal"
	android:gravity="center_vertical" android:layout_height="wrap_content">
	<View android:layout_width="1.dip" android:layout_height="fill_parent"
		android:background="#cecdcd" />
	<!-- 错误码 -->
	<TextView android:gravity="center" android:layout_height="fill_parent"
		android:background="#D0EBFF" android:layout_width="170.0dip"
		android:textColor="@color/lightblack" android:textSize="22px"
		android:id="@+id/error_code" />
	<View android:layout_width="1.dip" android:layout_height="fill_parent"
		android:background="#cecdcd" />
	<!-- 错误信息 -->
	<TextView android:gravity="left|center_vertical"
		android:layout_weight="1.0" android:layout_height="wrap_content"
		android:minHeight="60dip" android:layout_width="fill_parent"
		android:textColor="@color/orange" android:paddingLeft="20dip"
		android:paddingTop="15dip"
		android:paddingBottom="15dip"
		android:paddingRight="20dip" android:textSize="22px" android:id="@+id/error_msg" />
	<View android:layout_width="1.dip" android:layout_height="fill_parent"
		android:background="#cecdcd" />
</LinearLayout>