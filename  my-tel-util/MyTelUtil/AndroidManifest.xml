<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.yang.android.tel" android:versionCode="1"
	android:versionName="1.0">
	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:name=".MyTelUtil" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<service android:enabled="true" android:name=".MyTelServices"></service>
		<receiver android:name=".RefuseReceiver">  
             <intent-filter>
                  <action android:name="android.intent.action.NEW_OUTGOING_CALL" />
                  <action android:name="android.intent.action.PHONE_STATE"/> 
                  <action android:name="android.provider.Telephony.SMS_RECEIVED" />          
             </intent-filter>
        </receiver>
		
	</application>
	<uses-permission android:name="android.permission.CALL_PHONE" />
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
	<uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS"/>
	<uses-permission android:name="android.permission.SEND_SMS"/>
	<uses-permission android:name="android.permission.RECEIVE_SMS"/>
</manifest>