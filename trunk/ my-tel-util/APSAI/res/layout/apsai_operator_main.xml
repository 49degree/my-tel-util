<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/apsai_main_bg">
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_marginTop="10dip"
		android:layout_marginBottom="10dip" android:gravity="left|center"
		android:paddingLeft="5dip" android:textSize="20sp"
		android:background="@drawable/apsai_layout_title_bg" 
		android:text="@string/apsai_insu_order" />
	<LinearLayout android:layout_width="fill_parent"
		android:gravity="center" android:layout_height="fill_parent"
		android:layout_weight="1" android:orientation="horizontal"  
		android:layout_marginLeft="20dip"  android:layout_marginRight="20dip">
		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:gravity="center"
			android:orientation="horizontal" android:layout_weight="1">
			<ImageButton android:id="@+id/insu_sale_btn"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:background="@drawable/main_saleinsu_operator_btn" />
		</LinearLayout>
		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:gravity="center"
			android:orientation="horizontal" android:layout_weight="1">
			<ImageButton android:id="@+id/insu_back_btn"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:background="@drawable/main_backinsu_operator_btn" />
		</LinearLayout>
		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:gravity="center"
			android:orientation="horizontal" android:layout_weight="1">
			<ImageButton android:id="@+id/insu_useless_btn"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:background="@drawable/main_uselessinsu_operator_btn" />
		</LinearLayout>
	</LinearLayout>
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_marginTop="10dip"
		android:layout_marginBottom="10dip" android:gravity="left|center"
		android:paddingLeft="5dip" android:textSize="20sp"
		android:background="@drawable/apsai_layout_title_bg"
		android:text="@string/apsai_sale_check_manager" />
	<LinearLayout android:layout_width="fill_parent"
		android:gravity="center" android:layout_height="fill_parent"
		android:layout_weight="1" android:orientation="horizontal"  
		android:layout_marginLeft="20dip"  android:layout_marginRight="20dip">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:gravity="center"
			android:orientation="horizontal" android:layout_weight="1">
			<ImageButton android:id="@+id/check_manager_btn"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:background="@drawable/main_check_manager_btn" />
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:gravity="center"
			android:orientation="horizontal" android:layout_weight="1">
			<ImageButton android:id="@+id/insubatch_manager_btn"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:background="@drawable/main_insu_batch_list_btn" />
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:gravity="center"
			android:orientation="horizontal" android:layout_weight="1">
			<ImageButton android:id="@+id/insu_query_btn"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:background="@drawable/main_insu_query_btn" />
		</LinearLayout>
	</LinearLayout>
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_marginTop="10dip"
		android:layout_marginBottom="10dip" android:gravity="left|center"
		android:paddingLeft="5dip" android:textSize="20sp"
		android:background="@drawable/apsai_layout_title_bg" 
		android:text="@string/apsai_systeminfo_titile" />
	<LinearLayout android:layout_width="fill_parent"
		android:gravity="center" android:layout_height="fill_parent"
		android:layout_weight="1" android:orientation="horizontal"
		android:layout_marginLeft="20dip"  
		android:layout_marginRight="20dip"
		android:layout_marginBottom="20dip">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:gravity="center"
			android:orientation="horizontal" android:layout_weight="1">
			<ImageButton android:id="@+id/soft_updatebtn"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:background="@drawable/main_soft_update_btn" />
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:gravity="center"
			android:orientation="horizontal" android:layout_weight="1">
			<ImageButton android:id="@+id/sys_config_btn"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:background="@drawable/main_sys_config_btn" />
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:gravity="center"
			android:orientation="horizontal" android:layout_weight="1">
			<ImageButton android:id="@+id/version_info_btn"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:background="@drawable/main_version_info_btn" />
		</LinearLayout>
	</LinearLayout>

</LinearLayout>
