<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="apsai_edittext_style" parent="@android:style/Widget.EditText">
		<item name="android:paddingLeft">8sp</item>
	</style>
	<style name="apsai_edittext_small_style" parent="@android:style/Widget.EditText">
		<item name="android:paddingLeft">8sp</item>
	</style>
	<style name="apsai_window_title_background">
	</style>
	<!--标题样式，暂时没用了 -->
	<style name="apsai_WindowTitleText" parent="@android:style/TextAppearance.WindowTitle">
		<item name="android:textSize">20sp</item>
	</style>
	<!--标题样式 -->	
	<style name="WindowTitle">
		<item name="android:singleLine">true</item>
		<item name="android:textSize">20sp</item>
	</style>
	<style name="apsai_window_title_theme" parent="android:Theme">
		<item name="android:windowTitleBackgroundStyle">@style/apsai_window_title_background</item>
		<item name="android:windowTitleStyle">@style/WindowTitle</item>
		<item name="android:windowTitleSize">35dip</item>
		<item name="android:textSize">18sp</item>
	</style>
	<style name="apsai_page_num_text_style">
		<item name="android:textColor">#FFFFFFFF</item>
		<item name="android:textSize">14sp</item>
	</style>
	<style name="apsai_page_text_style">
		<item name="android:textColor">#FFFFFFFF</item>
		<item name="android:textSize">16sp</item>
	</style>
	<style name="apsai_list_header_text_style">
		<item name="android:gravity">center</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">#4B4B4B</item>
	</style>
	<style name="apsai_list_item_text_style">
		<item name="android:gravity">center</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">#4B4B4B</item>
	</style>
	<style name="apsai_list_split_vline_style">
		<item name="android:layout_width">1px</item>
		<item name="android:background">#FF909090</item>
	</style>
	<style name="apsai_list_split_hline_style">
		<item name="android:layout_height">1px</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:background">#FF909090</item>
	</style>

	<style name="apsai_dialog_title_text_style">
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:textSize">18sp</item>
	</style>

	<style name="apsai_dialog_text_style">
		<item name="android:textColor">#000000</item>
		<item name="android:textSize">17sp</item>
	</style>
	<style name="apsai_sale_check_list_text_style">
		<item name="android:textColor">#000000</item>
		<item name="android:textSize">16sp</item>
	</style>
	<style name="apsai_sale_check_split_line_style">
		<item name="android:layout_height">1px</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:background">#AFDCDCDC</item>
	</style>
	<style name="apsai_dialog_init_style">
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:textSize">17sp</item>
	</style>
	<style name="apsai_sale_check_btn_style">
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:textSize">16sp</item>
	</style>
	<style name="apsai_dialog_btn_style">
		<item name="android:textColor">#000000</item>
		<item name="android:textSize">17sp</item>
		<item name="android:gravity">center_vertical|center_horizontal</item>
	</style>
	
    <style name="TANCStyle" parent="@android:style/Theme.Dialog">
        <!-- 屏幕背景不变暗 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 更改对话框标题栏 -->
        <item name="android:windowTitleStyle">@style/TitleStyle</item>
    </style>
    <style name="TitleStyle">
        <item name="android:textAppearance">@style/TitleText</item>
    </style>
    <style name="TitleText" parent="@android:style/TextAppearance.DialogWindowTitle">
        <!-- 设置Dialog标题栏文字颜色。 -->
        <item name="android:textColor">#FFFFFF</item>
		<item name="android:textSize">18sp</item>
    </style>	
	
</resources>
