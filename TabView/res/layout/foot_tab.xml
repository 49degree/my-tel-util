<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <!-- TabActivity 显示用的布局 -->
		<android.support.v4.view.ViewPager
		    android:id="@+id/activity_page"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1.0"
		    >
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" >
        </FrameLayout>
		</android.support.v4.view.ViewPager>
      

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:visibility="gone" >
        </TabWidget>

        <RadioGroup
            android:id="@+id/main_radio"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/footerbg"
            android:gravity="fill"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radio_button0"
              	style="@style/main_tab_bottom"
                android:background="@drawable/foot_selector_bus"
                 />

            <RadioButton
                android:id="@+id/radio_button1"
                style="@style/main_tab_bottom"
                android:background="@drawable/foot_selector_near" />

            <RadioButton
                android:id="@+id/radio_button3"
                style="@style/main_tab_bottom"
                android:background="@drawable/foot_selector_road" />

            <RadioButton
                android:id="@+id/radio_button4"
                style="@style/main_tab_bottom"
                android:background="@drawable/foot_selector_service" />

            <RadioButton
                android:id="@+id/radio_button5"
                style="@style/main_tab_bottom"
                android:background="@drawable/foot_selector_mine" />
        </RadioGroup>
    </LinearLayout>

</TabHost>