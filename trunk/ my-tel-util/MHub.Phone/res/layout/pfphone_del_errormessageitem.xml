<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/row"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:layout_weight="1" android:descendantFocusability="blocksDescendants">
	<ImageView android:layout_marginLeft="3dip" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/txt_appId"
		android:layout_marginTop="10dip" android:layout_weight="1"></ImageView><!--
		<TextView android:layout_width="wrap_content" android:visibility="invisible"
		android:layout_height="wrap_content" android:layout_marginLeft="12dip" android:id="@+id/txt_id"
		android:layout_toRightOf="@+id/txt_id" android:textSize="15sp" android:layout_centerInParent="true"
		android:textColor="#000000" android:layout_marginTop="10dip" android:layout_weight="1" />
	--><TextView android:layout_width="wrap_content" android:layout_weight="1"
		android:layout_height="wrap_content" android:id="@+id/txt_alarmTypeId"
		android:layout_toRightOf="@+id/txt_appId" android:textSize="15sp"
		android:layout_centerInParent="true"
		android:textColor="#000000" android:layout_marginTop="10dip" android:layout_marginLeft="8dip" />
	<TextView android:layout_width="200dip" android:layout_height="wrap_content"
		android:id="@+id/txt_AlarmDescription" android:layout_toRightOf="@+id/txt_alarmTypeId"
		android:textSize="15sp" android:textColor="#000000"  android:layout_centerInParent="true"
		android:layout_marginTop="10dip" android:layout_weight="1"/>
	<TextView android:layout_width="wrap_content" android:layout_weight="1" android:layout_marginTop="5dip"
		android:layout_height="wrap_content" android:id="@+id/txt_AlarmTime" 
		android:textSize="15sp" android:textColor="#000000" android:layout_marginLeft="8dip"
		android:layout_alignParentLeft="true" android:layout_below="@+id/txt_appId" />
		<Button android:id="@+id/imgBtn" android:layout_width="wrap_content"
		android:background ="@drawable/pfphone_delete" android:focusable="false"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:layout_marginRight="5dip"></Button>
</RelativeLayout>
