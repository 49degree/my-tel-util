<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout android:orientation="horizontal"
		android:paddingTop="5dip" android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<Button android:id="@+id/btn_stop" android:text="停止"
			android:gravity="right" android:layout_width="150dip"
			android:layout_height="wrap_content" />
		<EditText android:id="@+id/edt_log" android:layout_width="fill_parent"
			android:layout_height="60dip" android:layout_weight="1" />
	</LinearLayout>
	<LinearLayout android:orientation="horizontal"
		android:paddingTop="5dip" android:layout_width="fill_parent"
		android:layout_height="550dip">
		<TextView android:text="POS下发PAD数据:" android:gravity="right"
			android:layout_width="150dip" android:layout_height="wrap_content" />
		<ScrollView android:layout_width="fill_parent"
			android:layout_height="150dip">
			<EditText android:id="@+id/edt_pos_to_pad"
				android:layout_width="fill_parent" android:layout_height="wrap_content" />
		</ScrollView>
	</LinearLayout>
	<LinearLayout android:orientation="horizontal"
		android:paddingTop="5dip" android:layout_width="fill_parent"
		android:layout_height="150dip">
		<TextView android:text="PAD上传POS数据" android:gravity="right"
			android:layout_width="150dip" android:layout_height="wrap_content" />
		<ScrollView android:layout_width="fill_parent"
			android:layout_height="150dip">
			<EditText android:id="@+id/edt_pad_to_pos"
				android:layout_width="fill_parent" android:layout_height="wrap_content" />
		</ScrollView>
	</LinearLayout>
	<LinearLayout android:orientation="horizontal"
		android:paddingTop="5dip" android:layout_width="fill_parent"
		android:layout_height="150dip">
		<TextView android:text="PAD上传SERVER数据" android:gravity="right"
			android:layout_width="150dip" android:layout_height="wrap_content" />
		<ScrollView android:layout_width="fill_parent"
			android:layout_height="150dip">
			<EditText android:id="@+id/edt_pad_to_server"
				android:layout_width="fill_parent" android:layout_height="wrap_content" />
		</ScrollView>
	</LinearLayout>
	<LinearLayout android:orientation="horizontal"
		android:paddingTop="5dip" android:layout_width="fill_parent"
		android:layout_height="150dip">
		<TextView android:text="SERVER上传PAD数据" android:gravity="right"
			android:layout_width="150dip" android:layout_height="wrap_content" />
		<ScrollView android:layout_width="fill_parent"
			android:layout_height="150dip">
			<EditText android:id="@+id/edt_server_to_pad"
				android:layout_width="fill_parent" android:layout_height="wrap_content" />
		</ScrollView>
	</LinearLayout>
</LinearLayout>
