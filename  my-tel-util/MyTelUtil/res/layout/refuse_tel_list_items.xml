<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:paddingTop="3dip"
	android:paddingBottom="3dip"
	android:paddingLeft="5dip">
	<ImageView android:id="@+id/frend_logo" android:background="@drawable/icon" 
	    android:layout_width="wrap_content" android:layout_height="48px" android:gravity="left"/>
	<TextView android:id="@+id/frend_name" android:textColor="@color/title" 
		android:layout_height="48px" android:layout_width="100px"
		android:paddingLeft="15px"
		android:textSize="15px" android:gravity="left|center_vertical"/>
	<TextView android:id="@+id/frend_tel_num" android:textColor="#000000"
	    android:layout_width="wrap_content" android:layout_height="48px" 
	    android:textSize="15px" android:gravity="left|center_vertical"/>
</LinearLayout>
