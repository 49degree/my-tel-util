			android:layout_height="58.0dip" android:layout_width="fill_parent"
			android:orientation="horizontal">
			<View android:layout_width="1.dip" android:layout_height="fill_parent"
				android:background="#cecdcd" />
			<TextView android:text="姓名" android:singleLine="true"
				android:gravity="center" android:textColor="@color/tell_normal"
				android:textSize="24.0sp" android:layout_height="fill_parent"
				android:layout_width="150.0dip"></TextView>
			<View android:layout_width="1.dip" android:layout_height="fill_parent"
				android:background="#cecdcd" />
			<TextView android:text="性别" android:singleLine="true"
				android:gravity="center" android:textColor="@color/tell_normal"
				android:textSize="24.0sp" android:layout_height="fill_parent"
				android:layout_width="120.0dip"></TextView>
			<View android:layout_width="1.dip" android:layout_height="fill_parent"
				android:background="#cecdcd" />
			<TextView android:text="与被保人关系" android:singleLine="true"
				android:gravity="center" android:textColor="@color/tell_normal"
				android:textSize="24.0sp" android:layout_height="fill_parent"
				android:layout_width="200.0dip"></TextView>
			<View android:layout_width="1.dip" android:layout_height="fill_parent"
				android:background="#cecdcd" />
			<TextView android:text="证件类型" android:singleLine="true"
				android:gravity="center" android:textColor="@color/tell_normal"
				android:textSize="24.0sp" android:layout_height="fill_parent"
				android:layout_width="160.0dip"></TextView>
			<View android:layout_width="1.dip" android:layout_height="fill_parent"
				android:background="#cecdcd" />
			<!-- 430602198604290515 -->
			<TextView android:text="证件号码" android:singleLine="true"
				android:gravity="center" android:textColor="@color/tell_normal"
				android:textSize="24.0sp" android:layout_height="fill_parent"
				android:layout_width="280.0dip"></TextView>
			<View android:layout_width="1.dip" android:layout_height="fill_parent"
				android:background="#cecdcd" />
			<TextView android:text="受益比例" android:singleLine="true" android:id="@+id/labScale"
				android:gravity="center" android:textColor="@color/tell_normal"
				android:textSize="24.0sp" android:layout_height="fill_parent"
				android:layout_width="150.0dip"></TextView>
			<View android:layout_width="1.dip" android:layout_height="fill_parent" android:id="@+id/labScaleLine"
				android:background="#cecdcd" />
			<!-- android:layout_width="120.0dip" -->
			<TextView android:text="操作" android:singleLine="true"
				android:gravity="center" android:textColor="@color/tell_normal"
				android:textSize="24.0sp" android:layout_height="fill_parent"
				android:layout_width="wrap_content" android:layout_weight="1.0"></TextView>
			<View android:layout_width="1.dip" android:layout_height="fill_parent"
				android:background="#cecdcd" />
		</LinearLayout>
		<ListView android:layout_width="fill_parent" android:id="@android:id/list"
			android:dividerHeight="1.0dip" android:drawSelectorOnTop="false"
			android:fadingEdge="none" android:layout_height="wrap_content"
			android:divider="#BEC8D1" android:layout_marginLeft="46.0dip"
			android:layout_marginRight="46.0dip" android:layout_gravity="center_horizontal"
			android:layout_weight="1.0" />
	</LinearLayout>
