<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/RelativeLayout02"   
    android:layout_width="fill_parent"    
    xmlns:android="http://schemas.android.com/apk/res/android"    
    android:layout_height="30dp"   
    android:paddingBottom="4dip"    
    android:paddingLeft="0dp"  
    android:paddingRight="0dip">  


    <ImageView  
    android:id="@+id/Img_CheckBox" android:gravity="center"     
    android:layout_width="30px"  android:background="#00000000"
    android:layout_height="fill_parent" 
    android:layout_marginLeft="1px" 
    
    />  
     
     
    <TextView android:id="@+id/Lead" android:text="模式"
    	android:layout_width="30px" android:layout_height="fill_parent"
     	android:layout_toRightOf="@+id/Img_CheckBox"
        android:textSize="17dp"
     	android:textColor="#000000" android:gravity="center">
    </TextView>
     
    <TextView android:id="@+id/Status" android:text="同步"
    	android:layout_width="40px" android:layout_height="fill_parent"
     	android:layout_toRightOf="@+id/Lead" android:gravity="center"
    	android:layout_marginLeft="1px"  android:textSize="17dp"
    	android:textColor="#000000">
    </TextView> 
	
	<TextView android:id="@+id/StartTime" android:text="开始时间"
    	android:layout_width="58px" android:layout_height="fill_parent"
     	android:layout_toRightOf="@+id/Status" android:gravity="center"
     	android:layout_marginLeft="1px" android:textSize="17dp"
     	android:textColor="#000000">
    </TextView>
    
    <TextView android:id="@+id/TimeLength" android:text="时长"
    	android:layout_width="55px" android:layout_height="fill_parent"
     	android:layout_toRightOf="@+id/StartTime" android:gravity="center"
     	android:layout_marginLeft="1px" android:textSize="17dp"
     	android:textColor="#000000"> 
    </TextView>
    
    <TextView android:id="@+id/FilePath" android:text=""
    	android:layout_width="0px" android:layout_height="fill_parent"
     	android:layout_toRightOf="@+id/TimeLength" 
     	android:visibility="invisible" android:textSize="17dp">
    </TextView>
    
    
</RelativeLayout>