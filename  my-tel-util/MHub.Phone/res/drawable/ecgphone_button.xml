<?xml version="1.0" encoding="utf-8"?>  
<selector  
    xmlns:android="http://schemas.android.com/apk/res/android">  
  
    <item android:state_pressed="true" >  
        <shape>  
            <gradient  
                android:startColor="#417de2"  
                android:endColor="#4177ee"  
                android:angle="270" />  
            <stroke  
                android:width="3dp"  
                android:color="#00bb00" />  
            <corners  
                android:radius="5dp" />  
            <padding  
                android:left="10dp"  
                android:top="10dp"  
                android:right="10dp"  
                android:bottom="10dp" />  
        </shape>  
    </item>  
  
    <item android:state_focused="true" >  
        <shape>  
            <gradient  
                android:endColor="#00ff00"  
                android:startColor="#0000ff"  
                android:angle="270" />  
            <stroke  
                android:width="3dp"  
                android:color="#0000ff" />  
            <corners  
                android:radius="5dp" />  
            <padding  
                android:left="10dp"  
                android:top="10dp"  
                android:right="10dp"  
                android:bottom="10dp" />  
        </shape>  
    </item>  
  
    <item>          
        <shape>  
            <gradient  
                android:endColor="#417de2"  
                android:startColor="#417de2"  
                android:angle="270" />  
            <stroke  
                android:width="3dp"  
                android:color="#bebebe" />  
            <corners  
                android:radius="5dp" />  
            <padding  
                android:left="10dp"  
                android:top="10dp"  
                android:right="10dp"  
                android:bottom="10dp" />  
        </shape>  
    </item>  
</selector>  
