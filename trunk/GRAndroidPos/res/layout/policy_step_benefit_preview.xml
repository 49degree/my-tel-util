		android:orientation="horizontal" android:layout_marginBottom="30.0dip"
		android:layout_height="wrap_content">
		<RadioButton style="@style/Custom.CheckBox" android:text="\t法定继承人"
			android:layout_width="wrap_content" android:textSize="24.0sp" android:checked="true" 
			android:textColor="@color/black" android:layout_height="wrap_content"
			android:id="@+id/radioInheried" />
		<RadioButton style="@style/Custom.CheckBox" android:text="\t顺位"
			android:layout_width="wrap_content" android:layout_marginLeft="40.0dip"
			android:textSize="24.0sp" android:textColor="@color/black"
