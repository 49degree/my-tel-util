<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:top="http://schemas.android.com/apk/res/com.skyeyes.storemonitor"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.skyeyes.base.view.TopTitleView
        android:id="@+id/vp_topView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        top:leftButtonText="实时查看"
        top:rightButtonText="历史记录"
        top:showCenterButtons="true"
        top:showMenuBtn="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout android:id="@+id/vp_real_time_ll"
            android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:padding="15px" >

                <TextView
                    android:id="@+id/count_all_manu_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0000"
                    android:textSize="110px" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人" >
                </TextView>

                <TextView
                    android:id="@+id/count_avg_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text="00"
                    android:textSize="60px" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Min" >
                </TextView>
            </LinearLayout>

            <Gallery
                android:id="@+id/chennal_pic_gallery"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="10px"
                android:background="#000000"
                android:spacing="0dip" />
        </LinearLayout>
        
        <LinearLayout android:id="@+id/vp_history_ll"
            android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:padding="15px" >

                <TextView
                    android:id="@+id/count_all_manu_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123"
                    android:textSize="110px" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人" >
                </TextView>

                <TextView
                    android:id="@+id/count_avg_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text="12"
                    android:textSize="60px" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Min" >
                </TextView>
            </LinearLayout>

            <Gallery
                android:id="@+id/chennal_pic_gallery"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="10px"
                android:background="#000000"
                android:spacing="0dip" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>