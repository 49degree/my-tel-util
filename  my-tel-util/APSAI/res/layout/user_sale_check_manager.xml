<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#FFFFFFFF"
	android:gravity="center" android:id="@+id/apsai_page_frame">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:gravity="top|center_horizontal"
		android:orientation="vertical">
		<HorizontalScrollView android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:orientation="vertical">
			<ListView android:id="@+id/sale_checked_list"
				android:paddingLeft="5dip" android:layout_width="wrap_content"
				android:layout_height="fill_parent" android:cacheColorHint="#00000000">
			</ListView>
		</HorizontalScrollView>
	</LinearLayout>


	<com.guanri.android.insurance.activity.base.ApsaiPageNumPannelView android:id="@+id/sale_checked_page_num_pannel"
	    android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="bottom|center_horizontal"
		android:orientation="vertical" android:layout_marginBottom="2dip" >
	</com.guanri.android.insurance.activity.base.ApsaiPageNumPannelView>
</FrameLayout>