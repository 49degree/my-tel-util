<?xml version="1.0" encoding="utf-8"?>
<!-- 金享人生   建议保障下面的表格  -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">
	<com.ihandy.xgx.ui.widget.TellTableLayout
		android:layout_marginTop="35.0dip" android:background="@drawable/table_head"
		android:id="@+id/table1" android:layout_marginLeft="115.0dip"
		android:layout_marginRight="100.0dip" android:gravity="center_vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TableRow android:orientation="horizontal">
			<TextView android:text="保险利益" android:gravity="center"
				android:layout_width="726.0dip" android:textColor="@color/tell_normal"
				android:textSize="24px" />
			<TextView android:text="投保人义务" android:gravity="center"
				android:layout_weight="1.0" android:textColor="@color/tell_normal"
				android:textSize="24px" />
		</TableRow>
	</com.ihandy.xgx.ui.widget.TellTableLayout>
	<com.ihandy.xgx.ui.widget.TellTableLayout
		android:background="@drawable/table_body1" android:layout_marginLeft="116.0dip"
		android:layout_marginRight="99.0dip" android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<TableRow android:orientation="horizontal"
			android:layout_width="wrap_content" android:layout_height="wrap_content">
			<com.ihandy.xgx.ui.widget.TellTableLayout
				android:background="@color/white" android:id="@+id/table2"
				android:layout_width="wrap_content" android:layout_height="wrap_content">
				<TableRow android:orientation="horizontal"
					android:layout_width="fill_parent" android:layout_height="wrap_content">
					<TextView style="@style/suggest_th1" android:text="主险：身故或全残保障" 
						android:layout_marginTop="0.0dip" android:paddingLeft="16.0dip" android:layout_marginLeft="0.0dip"
						android:layout_width="370.0dip" android:layout_height="125.0dip" />
					<TextView style="@style/suggest_td1" android:id="@+id/zfjpremium"
						android:paddingLeft="16.0dip" android:layout_height="fill_parent"
						android:layout_width="354.0dip" android:layout_marginTop="0.0dip"
						android:layout_marginRight="0.0dip" android:text="基本保额XXXX元\n加上累积红利保额，详见条款。" />
				</TableRow>
				<TableRow android:orientation="horizontal"
					android:layout_width="fill_parent" android:layout_height="wrap_content">
					<TextView style="@style/suggest_th1" android:text="附加险：提前给付重大疾病保障"
						android:paddingLeft="16.0dip" android:layout_width="370.0dip" />
					<TextView style="@style/suggest_td1" android:text="为主险有效保险金额详见条款"
						android:paddingLeft="16.0dip" android:layout_marginRight="0.0dip"
						android:layout_width="354.0dip" />
				</TableRow>
			</com.ihandy.xgx.ui.widget.TellTableLayout>
			<View android:layout_width="1.dip" android:layout_height="fill_parent"
				android:background="#cecdcd" />
			<com.ihandy.xgx.ui.widget.TellTableLayout
				android:background="@color/white" android:id="@+id/table3"
				android:layout_width="wrap_content" android:layout_height="wrap_content">
				<TableRow android:orientation="horizontal"
					android:layout_width="fill_parent" android:layout_height="wrap_content">
					<TextView style="@style/suggest_th2" android:text="保费"
						android:layout_marginTop="0.0dip" android:paddingLeft="16.0dip"
						android:layout_width="146.0dip" />
					<TextView style="@style/suggest_td2" android:id="@+id/jypremium"
						android:layout_width="184.0dip" android:layout_marginRight="0.0dip"
						android:layout_marginTop="0.0dip" android:text="20000元/年" />
				</TableRow>
				<TableRow android:orientation="horizontal"
					android:layout_width="fill_parent" android:layout_height="wrap_content">
					<TextView style="@style/suggest_th2" android:text="交费方式"
						android:paddingLeft="16.0dip" android:layout_width="146.0dip" />
					<TextView style="@style/suggest_td2" android:text="每年交1次"
						android:layout_width="184.0dip" android:layout_marginRight="0.0dip"
						android:id="@+id/customerBirthdy" />
				</TableRow>
				<TableRow android:orientation="horizontal"
					android:layout_width="fill_parent" android:layout_height="wrap_content">
					<TextView style="@style/suggest_th2" android:text="交费年限"
						android:paddingLeft="16.0dip" android:layout_width="146.0dip" />
					<TextView style="@style/suggest_td2" android:text="共交10年"
						android:layout_width="184.0dip" android:layout_marginRight="0.0dip"
						android:id="@+id/customerIdCardNo" />
				</TableRow>
			</com.ihandy.xgx.ui.widget.TellTableLayout>
		</TableRow>
	</com.ihandy.xgx.ui.widget.TellTableLayout>
</LinearLayout>
