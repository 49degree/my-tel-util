<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:top="http://schemas.android.com/apk/res/com.skyeyes.storemonitor"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.skyeyes.base.view.TopTitleView
        android:id="@+id/vp_topView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        top:leftButtonText="实时查看"
        top:rightButtonText="历史记录"
        top:showMenuBtn="true"
        top:showCenterButtons="true" />

    <TextView
        android:id="@+id/store_login_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10" >
    </TextView>
     <Gallery
         android:id="@+id/chennal_pic_gallery"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:spacing="0dip" />    
</LinearLayout>