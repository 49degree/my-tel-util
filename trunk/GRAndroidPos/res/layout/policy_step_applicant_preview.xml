<?xml version="1.0" encoding="utf-8"?>
<!-- 投保人信息一览 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<com.ihandy.xgx.ui.widget.TellTableLayout
		android:background="@drawable/table_frame" android:layout_marginTop="65.0dip"
		android:layout_marginLeft="62.0dip" android:layout_width="wrap_content"
		android:layout_height="wrap_content" >
		<TableRow style="@style/customer_preview_tell_tr">
			<TextView style="@style/customer_preview_th" android:text="投保人姓名" android:id="@+id/customerName_txt"/>
			<TextView style="@style/customer_preview_td" 
				android:id="@+id/customerName" />
			<TextView style="@style/customer_preview_th" android:text="与被保人关系" android:id="@+id/customerRelation_txt"/>
			<TextView style="@style/customer_preview_td" 
				android:id="@+id/customerRelation" android:layout_width="307px" />
		</TableRow>
		<TableRow style="@style/customer_preview_tell_tr">
			<TextView style="@style/customer_preview_th" android:text="性别" />
			<TextView style="@style/customer_preview_td"
				android:id="@+id/customerGender" />
			<TextView style="@style/customer_preview_th" android:text="出生年月" />
			<TextView style="@style/customer_preview_td"
				android:layout_width="307px" android:id="@+id/customerBirthdy" />
		</TableRow>
		<TableRow style="@style/customer_preview_tell_tr">
			<TextView style="@style/customer_preview_th" android:text="证件类型" />
			<TextView style="@style/customer_preview_td"
				android:id="@+id/customerIdCardType" />
			<TextView style="@style/customer_preview_th" android:text="证件号码" />
			<TextView style="@style/customer_preview_td"
				android:layout_width="307px" android:id="@+id/customerIdCardNo" />
		</TableRow>
		<TableRow style="@style/customer_preview_tell_tr">
			<TextView style="@style/customer_preview_th" android:text="婚姻状态" />
			<TextView style="@style/customer_preview_td"
				android:id="@+id/customerMarriageStatus" />
			<TextView style="@style/customer_preview_th" android:text="国籍" />
			<TextView style="@style/customer_preview_td"
				android:layout_width="307px" android:id="@+id/customerNationality" />
		</TableRow>
		<TableRow style="@style/customer_preview_tell_tr">
			<TextView style="@style/customer_preview_th" android:text="户籍所在地" />
			<TextView style="@style/customer_preview_td"
				android:id="@+id/customerResidence" />
			<TextView style="@style/customer_preview_th" android:text="学历" />
			<TextView style="@style/customer_preview_td"
				android:layout_width="307px" android:id="@+id/customerEducation" />
		</TableRow>
		<TableRow style="@style/customer_preview_tell_tr">
			<TextView style="@style/customer_preview_th" android:text="联系地址" />
			<TextView style="@style/customer_preview_td" android:singleLine="true"
				android:id="@+id/customerAddressDetail" />
			<TextView style="@style/customer_preview_th" android:text="邮编" />
			<TextView style="@style/customer_preview_td" android:layout_width="307px"
				android:id="@+id/customerPostCode" />
		</TableRow>
		<TableRow style="@style/customer_preview_tell_tr">
			<TextView style="@style/customer_preview_th" android:text="区域编号" />
			<TextView style="@style/customer_preview_td"
				android:id="@+id/customerAreaCode" />
			<TextView style="@style/customer_preview_th" android:text="固定电话" />
			<TextView style="@style/customer_preview_td"
				android:layout_width="307px" android:id="@+id/customerPhone" />
		</TableRow>
		<TableRow style="@style/customer_preview_tell_tr">
			<TextView style="@style/customer_preview_th" android:text="职业" />
			<TextView style="@style/customer_preview_td"  android:singleLine="true"
				android:id="@+id/customerCareer" />
			<TextView style="@style/customer_preview_th" android:text="手机号" />
			<TextView style="@style/customer_preview_td"
				android:layout_width="307px" android:id="@+id/customerMobile" />
		</TableRow>
		<TableRow style="@style/customer_preview_tell_tr">
			<TextView style="@style/customer_preview_th" android:text="工作单位" />
			<TextView style="@style/customer_preview_td" android:singleLine="true"
				android:id="@+id/customerWorkUnit" />
			<TextView style="@style/customer_preview_th" android:text="E-Mail" />
			<TextView style="@style/customer_preview_td" android:singleLine="true"
				android:id="@+id/customerEmail" android:layout_width="307px" />
		</TableRow>
	</com.ihandy.xgx.ui.widget.TellTableLayout>
</LinearLayout>