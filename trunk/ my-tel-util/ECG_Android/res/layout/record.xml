<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/recordbg">
  <TextView android:id="@+id/tishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
  >
  </TextView>
 <LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="115dp"
  android:background="#00000000">
 
 <TextView android:id="@+id/Search"
     android:text="@string/condition"
     android:gravity="center"
     android:layout_marginTop="5dp"
     android:textSize="20dp"
     android:textColor="#ffffff"
     android:layout_width="fill_parent"
     android:layout_height="26px"
  ></TextView>
  

  <LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:layout_height="37dp"
  android:background="#00000000">
  
  <TextView android:id="@+id/Text_date"
   android:layout_width="wrap_content"
   android:layout_height="32dp"
   android:layout_marginLeft="18dp"
   android:text="@string/date"
   android:textSize="17dp"
   android:textColor="#0000ff"  
   
   ></TextView> 
    
  <EditText
   android:id="@+id/Edit_date" 
   android:layout_width="wrap_content"
   android:layout_height="35dp"
   android:layout_marginRight="46dp"
   android:focusable="false"
   android:textSize="18sp"
   android:singleLine="true"
   >
   </EditText>
  <CheckBox android:text="@string/all" 
     android:textColor="#0000ff"  
     android:id="@+id/Check_all" 
     android:layout_width="wrap_content" 
     android:layout_height="wrap_content"
     android:visibility="gone"
     >
  </CheckBox>
   
</LinearLayout> 


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
     android:orientation="horizontal"
     android:layout_width="fill_parent"
     android:layout_height="38dp"
     android:background="#00000000">
  
  <TextView android:id="@+id/Text_mode"
     android:layout_width="wrap_content"
     android:layout_height="30dp"
     android:textSize="18dp"
     android:textColor="#0000ff"  
     android:layout_marginLeft="17dp"
     android:text="@string/mode"  
   ></TextView> 
  
  <CheckBox android:text="@string/lead" 
     android:id="@+id/Check_lead" 
     android:textColor="#0000ff"  
     android:layout_width="wrap_content" 
     android:layout_height="wrap_content" 
     android:layout_marginRight="59dp">
  </CheckBox>
  
  <CheckBox android:text="@string/touch" 
     android:id="@+id/Check_touch" 
     android:textColor="#0000ff"  
     android:layout_width="wrap_content" 
     android:layout_height="wrap_content"
     android:layout_marginTop="1dip">
     </CheckBox>
  
  </LinearLayout> 
   
</LinearLayout> 
  
  
  <LinearLayout                 
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"  
  android:layout_height="210dp"
  android:layout_marginTop="11dp"
  
  >
  
   <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
     android:orientation="horizontal"
     android:layout_width="fill_parent" android:background="#0000"
     android:layout_height="38dp" android:layout_marginLeft="18dp"
     android:layout_marginTop="6px" android:layout_marginRight="18dp">
     
     <TextView android:id="@+id/TV_Select" android:text="选中"
     android:layout_width="30px" 
     android:layout_height="38dp" android:textSize="18dp"
     android:textColor="#000000" 
     android:background="#ffffff"
     ></TextView>
     
     <TextView android:id="@+id/TV_Lead" android:text="模式"
     android:layout_width="30px" 
     android:layout_height="38dp" android:textSize="18dp"
     android:textColor="#000000" android:background="#ffffff"
     android:layout_marginLeft="1px"
     ></TextView>
     
     <TextView android:id="@+id/TV_Status" android:text=" 同步"
     android:layout_width="40px"
     android:layout_height="38dp" android:textSize="18dp"
     android:textColor="#000000" android:background="#ffffff"
     android:layout_marginLeft="1px"
     ></TextView>
     <TextView android:id="@+id/TV_StartTime" android:text="开始时间"
     android:layout_width="58px" 
     android:layout_height="38dp" android:textSize="18dp"
     android:textColor="#000000"  android:background="#ffffff"
     android:layout_marginLeft="1px"
     ></TextView>
     <TextView android:id="@+id/TV_TimeLength" android:text="   时长"
     android:layout_width="55px" android:layout_marginLeft="1px"
     android:layout_height="38dp" android:textSize="18dp"
     android:textColor="#000000"  android:background="#ffffff"
     ></TextView>
     
   </LinearLayout>

  
  <ListView android:id="@+id/List_record" 
     android:layout_height="165dp"  
     android:layout_width="fill_parent"
     android:layout_gravity="center"
     android:layout_marginLeft="18dp"
     android:layout_marginRight="17dp"
     android:scrollbars="vertical"
  ></ListView>    
  

  
</LinearLayout> 
   
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="30px"
    android:background="@drawable/notifybtnbg"
    >
     
     <Button android:id="@+id/Btn_operate" 
      android:layout_width="90dp"
      android:layout_height="32px"
      android:layout_marginLeft="0px"  
      android:text="@string/operate"
      android:background="#00000000"
      android:textSize="18dp"
    ></Button>
     <Button android:id="@+id/Btn_back" 
      android:layout_width="90dp"
      android:layout_height="32px"
      android:layout_marginLeft="103px"  
      android:text="@string/back"
      android:background="#00000000"
       android:textSize="18dp"
    ></Button>
    
 </LinearLayout>
  
  
</LinearLayout>
