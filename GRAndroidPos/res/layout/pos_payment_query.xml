<?xml version="1.0" encoding="utf-8"?>
<!-- pos支付查询 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">


	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="50dip" android:layout_marginTop="30.0dip">
		<TextView android:text="交易时间:" android:layout_width="150px"
			android:layout_gravity="right" android:layout_height="wrap_content"
			android:gravity="right" android:textSize="24px" android:textColor="@color/black" />

		<com.ihandy.xgx.ui.widget.DateWidget
			android:drawableRight="@drawable/calendar" style="@style/Common_EditText"
			android:id="@+id/trade_start_time" android:layout_width="165px"
			android:layout_height="wrap_content" android:layout_marginLeft="20px" />

		<TextView android:text="至" android:layout_width="wrap_content"
			android:layout_gravity="center" android:layout_height="wrap_content"
			android:textSize="24px" android:textColor="@color/black" />

		<com.ihandy.xgx.ui.widget.DateWidget
			android:drawableRight="@drawable/calendar" style="@style/Common_EditText"
			android:id="@+id/trade_end_time" android:layout_width="165px"
			android:layout_height="wrap_content" />
		<!-- 投保人姓名 -->
		<TextView android:text="投保人姓名:" android:layout_width="140dip"
			android:gravity="right" android:layout_height="wrap_content"
			android:layout_marginLeft="25dip" android:textSize="24px"
			android:textColor="@color/black" />
		<EditText android:id="@+id/policyHolderName"
			android:layout_width="240px" android:layout_height="wrap_content"
			android:singleLine="true" style="@style/Common_EditText" android:maxLength="10"
			android:layout_marginLeft="20px" />
		<ImageView android:layout_width="wrap_content" android:id="@+id/search"
			android:onClick="onClick" android:layout_height="wrap_content"
			android:src="@drawable/query_selector" android:layout_marginLeft="100px" />
	</LinearLayout>
	<RelativeLayout android:layout_width="fill_parent" android:gravity="center_vertical"
		android:layout_height="wrap_content" android:layout_marginTop="10.0dip">
		<TextView android:text="证件号:" android:layout_width="150px"
			android:id="@+id/card_id_lab" android:layout_gravity="right"
			android:layout_height="wrap_content" android:gravity="right"
			android:textSize="24px" android:textColor="@color/black" />
		<EditText android:id="@+id/card_id" style="@style/Common_EditText"
			android:layout_toRightOf="@+id/card_id_lab" android:layout_width="290px"
			android:layout_height="wrap_content" android:inputType="number"
			android:singleLine="true" android:layout_marginLeft="20px" />
		<TextView android:text="第三方支付公司:" android:layout_width="180dip"
			android:gravity="right" android:layout_height="wrap_content"
			android:id="@+id/third_company_select_lab" android:layout_toRightOf="@+id/card_id"
			android:textSize="24px" android:textColor="@color/black"
			android:layout_marginLeft="50px" />
		<com.ihandy.xgx.ui.widget.SpinnerWidget android:layout_toRightOf="@+id/third_company_select_lab"
			android:layout_width="240dip" android:layout_height="wrap_content"
			android:layout_marginLeft="20px" android:id="@+id/third_company_select"
			android:prompt="@string/prompt_payment_company" />
	</RelativeLayout>
	<!-- pos支付查询结果 查询列表 -->
	<LinearLayout android:layout_width="wrap_content"
		android:layout_gravity="center_horizontal" android:background="@drawable/table_head"
		android:layout_height="58.0dip" android:layout_marginTop="35dip">
		<TextView android:text="保单号" android:gravity="center"
			android:layout_height="fill_parent" android:layout_width="230px"
			android:textColor="@color/tell_normal" android:textSize="24px" />
		<View android:layout_width="1.dip" android:layout_height="fill_parent"
			android:background="#cecdcd" />
		<TextView android:text="投保人姓名" android:gravity="center"
			android:layout_width="250px" android:layout_height="fill_parent"
			android:textColor="@color/tell_normal" android:textSize="24px" />
		<View android:layout_width="1.dip" android:layout_height="fill_parent"
			android:background="#cecdcd" />
		<TextView android:text="投保主险" android:gravity="center"
			android:layout_height="wrap_content" android:layout_width="550px"
			android:textColor="@color/tell_normal" android:textSize="24px" />
		<View android:layout_width="1.dip" android:layout_height="fill_parent"
			android:background="#cecdcd" />
		<TextView android:text="保险费" android:gravity="center"
			android:layout_height="fill_parent" android:layout_width="200px"
			android:textColor="@color/tell_normal" android:textSize="24px" />
	</LinearLayout>
	<ListView android:id="@android:id/list" android:layout_width="fill_parent"
		android:layout_marginBottom="48.0dip" android:layout_height="wrap_content"
		android:dividerHeight="1.0dip" android:layout_marginLeft="20.0dip"
		android:layout_marginRight="22.0dip" android:divider="#BEC8D1"
		android:drawSelectorOnTop="false" android:fadingEdge="none"
		android:layout_weight="1.0">
	</ListView>
</LinearLayout>