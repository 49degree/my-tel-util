<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	
	<LinearLayout 
		android:orientation="vertical"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" >
		<TextView
			android:id="@+id/mets_gatherNow_toptitle_tv" 
			android:gravity="center_horizontal"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:text="@string/mets_gatherNow_toptitle" >
		</TextView>
	</LinearLayout>
	
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" >
		<Button 
			android:id="@+id/mets_gatherNow_ok" 
			android:layout_marginLeft="60px"
			android:text="@string/mets_promptmessage_ok"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" />
		<Button 
			android:id="@+id/mets_gatherNow_cancel" 
			android:layout_marginRight="60px"
			android:text="@string/mets_promptmessage_negative"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" />
		
	</LinearLayout>
	
</LinearLayout>
