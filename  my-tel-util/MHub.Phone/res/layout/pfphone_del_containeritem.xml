<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/reLayout"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:descendantFocusability="blocksDescendants"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<ImageView android:layout_marginLeft="3dip" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/img2" 
		android:layout_marginTop="10dip"></ImageView>
		<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_marginLeft="12dip" android:id="@+id/txt_doctorName2"
		android:layout_toRightOf="@+id/img2" android:textSize="15sp" 
		android:textColor="#000000" android:layout_marginTop="10dip"/>

		<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/txt_Time2"
		android:textSize="15sp" android:textColor="#000000" 
		android:layout_alignParentRight="true" android:layout_marginTop="10dip"/>
		
		<TextView android:layout_width="wrap_content" android:layout_marginTop="10dip"
		android:layout_height="wrap_content" android:id="@+id/txt_context2" 
		android:textSize="15sp" android:textColor="#000000" android:layout_marginLeft="12dip"
		android:layout_alignParentLeft="true" android:layout_below="@+id/txt_doctorName2" />
		
		<Button android:id="@+id/imgBtn" android:layout_width="wrap_content"
		android:background ="@drawable/pfphone_delete" android:focusable="false"
		android:layout_height="wrap_content" android:layout_below="@+id/txt_Time2"
		android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:layout_marginRight="12dip"
		></Button>
	</RelativeLayout>

