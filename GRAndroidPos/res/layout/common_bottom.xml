<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:background="@drawable/main_bottom"
	android:layout_height="wrap_content">
	<LinearLayout android:layout_height="match_parent"
		android:gravity="center" android:layout_width="match_parent"
		android:layout_weight="1.0">
		<TextView android:id="@+id/btn_reinsure" android:textSize="24.0sp"
			android:textColor="@color/white" android:layout_width="wrap_content"
			android:text="@string/bottom_reinsure" android:layout_height="wrap_content"></TextView>
	</LinearLayout>
	<LinearLayout android:layout_height="match_parent"
		android:gravity="center" android:layout_width="match_parent"
		android:layout_weight="1.0">
		<TextView android:id="@+id/btn_identity" android:textSize="24.0sp"
			android:textColor="@color/white" android:layout_width="wrap_content"
			android:text="@string/bottom_identity" android:layout_height="wrap_content"></TextView>
	</LinearLayout>
	<LinearLayout android:layout_height="match_parent"
		android:gravity="center" android:layout_width="match_parent"
		android:layout_weight="1.0">
		<TextView android:id="@+id/btn_insure_query"
			android:textSize="24.0sp" android:layout_width="wrap_content"
			android:textColor="@color/white" android:text="@string/bottom_insure_query"
			android:layout_height="wrap_content"></TextView>
	</LinearLayout>
	<LinearLayout android:layout_height="match_parent"
		android:gravity="center" android:layout_width="match_parent"
		android:layout_weight="1.0">
		<TextView android:id="@+id/btn_review" android:layout_width="wrap_content"
			android:textSize="24.0sp" android:text="@string/bottom_review"
			android:textColor="@color/white" android:layout_height="wrap_content"></TextView>
	</LinearLayout>
</LinearLayout>