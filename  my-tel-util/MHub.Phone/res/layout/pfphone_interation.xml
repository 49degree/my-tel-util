<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation = "vertical"
	android:background="#FFFFFF">
	<LinearLayout android:layout_width ="fill_parent" android:layout_height ="25dip">
	<Button android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_marginLeft="15dip"
		android:text="       我要诉说" android:gravity="center|left"
		android:background="@anim/pfphone_btncomplain_style" android:id="@+id/complain"></Button>
	<Button android:layout_width="wrap_content"
		 android:layout_height="wrap_content"
		android:layout_marginLeft="65dip" android:text="       删除消息"
		android:gravity="center|left" android:background="@anim/pfphone_btndelete_style"
		android:id="@+id/delbtn"></Button>
		</LinearLayout>
					<TextView android:layout_width="fill_parent"
				android:layout_height="1dip" android:background="#B3B3B3" />
	<ViewFlipper android:id="@+id/ViewFlipper01"
		 android:layout_width="fill_parent"
		android:layout_height="250dip" android:layout_marginBottom="30dip">

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent">
			<ListView android:id="@+id/android:list"
				android:layout_width="wrap_content" android:cacheColorHint="#FFFFFF"
				android:layout_height="wrap_content" android:divider="#B3B3B3"
				android:dividerHeight="1px" />
			<TextView android:layout_width="fill_parent"
				android:layout_height="1dip" android:background="#B3B3B3" />
		</LinearLayout>
			</ViewFlipper>
		<LinearLayout android:orientation="horizontal"
			android:gravity="center" android:layout_width="fill_parent"
			android:layout_height="40dip" android:id="@+id/buttonlinearlayout"
			android:layout_weight="1">
			<Button android:id="@+id/leftbutton" android:gravity="center"
				android:text="上一页" android:textColor="#000000" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:background="@drawable/pfphone_previous_page"
				android:textSize="11sp" android:visibility="invisible" />
			<TextView android:id="@+id/middatatextview" android:gravity="center"
				android:layout_width="40dip" android:layout_height="wrap_content"
				android:textColor="#000000" android:textSize="18sp"
				android:layout_marginLeft="75dip" />
			<Button android:id="@+id/rightbutton" android:gravity="left|center"
				android:text="  下一页" android:textColor="#000000" android:background="@drawable/pfphone_next_page"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_marginLeft="75dip" android:textSize="11sp" />
		</LinearLayout>
</LinearLayout>
