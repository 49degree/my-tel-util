<?xml version="1.0" encoding="utf-8"?>
	<!-- 保费代扣帐户 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout android:layout_height="wrap_content"
		android:gravity="right" android:layout_marginTop="100.0dip"
		android:layout_width="530.0dip" android:orientation="vertical">
		<TextView android:text="* 户　名：" android:textColor="@color/tell_normal"
			android:textSize="24.0sp" android:layout_height="wrap_content"
			android:layout_marginTop="2.0dip" android:layout_width="wrap_content" />
		<TextView android:text="* 开户行：" android:layout_marginTop="26.0dip"
			android:textColor="@color/tell_normal" android:textSize="24.0sp"
			android:layout_height="wrap_content" android:layout_width="wrap_content" />
		<TextView android:text="* 请输入账号：" android:layout_marginTop="27.0dip"
			android:textColor="@color/tell_normal" android:textSize="24.0sp"
			android:layout_height="wrap_content" android:layout_width="wrap_content" />
		<TextView android:text="* 请再次输入：" android:layout_marginTop="28.0dip"
			android:textColor="@color/tell_normal" android:textSize="24.0sp"
			android:layout_height="wrap_content" android:layout_width="wrap_content" />
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content"
		android:layout_marginTop="100.0dip" android:layout_toRightOf="@+id/layLabels"
		android:layout_marginLeft="5.0dip" android:gravity="left"
		android:layout_width="600.0dip" android:orientation="vertical">
		<!-- 户名 -->
		<EditText android:layout_width="400.0dip" style="@style/Common_EditText"
			android:singleLine="true" android:id="@+id/accountName"
			android:enabled="false" android:focusable="false"
			android:layout_height="wrap_content" android:maxLength="30"
			android:inputType="text" />
		<!-- 开户行 -->
		<com.ihandy.xgx.ui.widget.SpinnerWidget
			android:layout_width="400.0dip" android:prompt="@string/prompt_bank"
			android:layout_height="wrap_content" android:layout_marginTop="20.0dip"
			android:id="@+id/accountBank" />
		<!-- 请输入账号 -->
		<EditText android:singleLine="true" android:inputType="number"
			android:layout_width="400.0dip" style="@style/Common_EditText"
			android:maxLength="30" android:numeric="integer" android:digits="0123456789"
			android:layout_height="wrap_content" android:layout_marginTop="20.0dip"
			android:id="@+id/accountNo" />

		<!-- 请再次输入 -->
		<EditText android:singleLine="true" android:inputType="number"
			android:maxLength="30" android:layout_width="400.0dip" style="@style/Common_EditText"
			android:numeric="integer" android:layout_marginTop="20.0dip" android:digits="0123456789"
			android:layout_height="wrap_content" android:id="@+id/accountNoAgain" />
	</LinearLayout>
</LinearLayout>