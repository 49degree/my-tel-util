		android:layout_height="wrap_content"
		android:padding="10dip"
		android:layout_gravity="center_horizontal"
		android:src="@drawable/anzhuang"/>
	<TextView android:text="出现如上图安装提示时请选择确定" android:layout_width="wrap_content"
		android:textSize="18.0dip" android:layout_gravity="center_horizontal"
		android:layout_height="wrap_content" android:padding="10.0dip"/>
	<Button android:text="确定" android:layout_width="match_parent" android:id="@+id/ok"
			android:padding="10.0dip" android:layout_margin="10dip" android:onClick="onClick"
			android:layout_gravity="center"
			android:layout_height="wrap_content" />
	</LinearLayout>
    </ScrollView>
</LinearLayout>
